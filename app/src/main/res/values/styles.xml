<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/hint_text_color</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:textViewStyle">@style/textview_nopadding</item>
    </style>

    <style name="textview_nopadding">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="main_single_text">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="main_multiline_text">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="hint_single_text">
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="hint_multiline_text">
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
